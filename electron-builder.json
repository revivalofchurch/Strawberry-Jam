{
  "productName": "strawberry-jam",
  "electronVersion": "32.0.1",
  "directories": {
    "output": "build"
  },
  "win": {
    "icon": "./assets/images/icon.ico",
    "asar": "true",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": false,
    "installerIcon": "./assets/images/icon.ico",
    "uninstallerIcon": "./assets/images/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Strawberry Jam",
    "include": "build/installer.nsh",
    "warningsAsErrors": false,
    "guid": "a2f8d7c4-6f3b-4c9e-9a2b-1c8f9e4d7a3c"
  },
  "files": [
    "**/*",
    "!**/*.{md,txt,pdf,docx}",
    "!dev/**/*",
    "!build/**/*",
    "!assets/extracted-winapp-public/**/*",
    "!assets/extracted-winapp-dev/**/*",
    "!*.{eslintignore,eslintrc,gitignore,gitattributes,editorconfig}"
  ],
  "extraFiles": [
    {
      "from": "plugins",
      "to": "plugins",
      "filter": [
        "**/*",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!memory-bank/**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!*-backup.asar",
        "!*-dev.asar",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    "public/**/*",
    "settings.json"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!memory-bank/**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!*-backup.asar",
        "!*-dev.asar",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    "public/",
    {
      "from": "src/electron/clear-cache-helper.js",
      "to": "clear-cache-helper.js"
    }
  ],
  "publish": {
    "provider": "github",
    "owner": "glvckoma",
    "repo": "Strawberry-Jam",
    "releaseType": "release"
  }
}
